<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - webLibrary 1.0</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("webLibrary 1.0", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Libro", "Index", "Libro")</li>
                            <li>@Html.ActionLink("Genero", "Index", "Genero")</li>
                            <li>@Html.ActionLink("Cadena de Librerias", "Index", "CadenaLibrerias")</li>
                            <li>@Html.ActionLink("Catálogo de Librería", "Index", "CatalogoLibreria")</li>
                            <li>@Html.ActionLink("InventarioPDV", "Index", "InventarioPDV")</li>
                            <!--<li>Html.ActionLink("ListaLibros", "Index", "ListaLibros")</li>-->
                            <li>@Html.ActionLink("PuntoVenta", "Index", "PuntoVenta")</li>
                            <!--<li>Html.ActionLink("SolicitudPedido", "Index", "SolicitudPedido")</li>-->
                            <!--<li>Html.ActionLink("SolicitudTraslado", "Index", "SolicitudTraslado")</li>-->
                            <!--<li>Html.ActionLink("Usuario", "Index", "Usuario")</li>-->


                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - webLibrary 1.0</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
