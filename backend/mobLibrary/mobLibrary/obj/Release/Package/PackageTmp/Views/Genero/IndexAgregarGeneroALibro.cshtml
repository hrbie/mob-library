@model IEnumerable<GENERO>

@{
    ViewBag.Title = "Index";
}

<h2>Generos de Libro</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID_GENERO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GENERO1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_GENERO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GENERO1)
        </td>
        <td>
            @Html.ActionLink("Agregar", "AgregarGenero", new {  libro = ViewBag.libro , genero = item.ID_GENERO }) |
        </td>

    </tr>
    
    
}

</table>
